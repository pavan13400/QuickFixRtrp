<!-- booking-success.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Booking Successful</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5fff5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .success-box {
            text-align: center;
            border: 2px solid #4CAF50;
            padding: 40px;
            border-radius: 15px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .success-box img {
            width: 100px;
        }
        .success-box h1 {
            color: #4CAF50;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="success-box">
        <img src="https://img.icons8.com/color/96/000000/checked--v1.png" alt="Success Tick"/>
        <h1>Booking Successful!</h1>
        <p>Your worker has been booked. Thank you for using Quickfix!</p>
    </div>
</body>
</html>
