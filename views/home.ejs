<%- include('partials/header') %>
<body>
    <section class="main-section">
        <div>
            <div class="main-text">Need assistance</div>
            <div class="sub-text">Don't resist to call our professionals</div>
        </div>
        <div class="image-placeholder">
            <img src="/images/image.jpg" alt="image">
        </div>
    </section>
    <div class="carousel">
        <input type="radio" name="radio-btn" id="radio1" checked>
        <input type="radio" name="radio-btn" id="radio2">
        <input type="radio" name="radio-btn" id="radio3">
        <div class="slides">
            <div class="slide first">
            <img src="/images/carpenter.jpg" alt="Slide 1">
            </div>
            <div class="slide">
            <img src="/images/cleanre.jpg" alt="Slide 2">
            </div>
            <div class="slide">
            <img src="/images/electrician.jpg" alt="Slide 3">
            </div>
        </div>
        <div class="navigation-manual">
            <label for="radio1" class="manual-btn"></label>
            <label for="radio2" class="manual-btn"></label>
            <label for="radio3" class="manual-btn"></label>
        </div>
    </div>
    <div class="blank">
        
    </div>
</body>
<script>
    let counter = 1;
    setInterval(() => {
      document.getElementById('radio' + counter).checked = true;
      counter++;
      if (counter > 3) {
        counter = 1;
      }
    }, 2000);
</script>
<%- include('partials/footer') %>